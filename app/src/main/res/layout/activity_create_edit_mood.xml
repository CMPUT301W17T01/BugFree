<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_edit_mood"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mac.bugfree.CreateEditMoodActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/toolbar_create_edit"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/home_tab"
                android:id="@+id/home_tab_add"
                />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:src="@drawable/add_tab_select"
                android:id="@+id/add_tab_home"
                />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/earth_tab"
                android:id="@+id/earth_tab_add" />

        </LinearLayout>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/create_mood"
                android:hint="Text Something(Reason)" />

            <Button
                android:text="Send"
                android:layout_width="191dp"
                android:layout_height="wrap_content"
                android:id="@+id/send" />

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:text="Mood State:"
                android:layout_width="wrap_content"
                android:id="@+id/text1_mood"
                android:layout_weight="1.65"
                android:textSize="18sp"
                android:layout_height="35dp"
                android:textStyle="normal|bold"
                android:fontFamily="serif"
                android:layout_marginLeft="10dp" />

            <Spinner
                android:layout_height="wrap_content"
                android:id="@+id/mood_state_spinner"
                android:layout_weight="1.65"
                android:layout_width="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:text="Social Situation:"
                android:layout_width="wrap_content"
                android:id="@+id/text2_social"
                android:layout_weight="1.65"
                android:textSize="18sp"
                android:layout_height="35dp"
                android:textStyle="normal|bold"
                android:layout_marginLeft="10dp" />


            <Spinner
                android:layout_height="wrap_content"
                android:id="@+id/social_situation"
                android:layout_weight="1.65"
                android:layout_width="wrap_content"
                android:spinnerMode="dropdown" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:text="Reason:"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:id="@+id/text3_reason"
                android:layout_weight="1.65"
                android:textSize="18sp"
                android:textStyle="normal|bold"
                android:layout_marginLeft="10dp" />

            <EditText
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/reason"
                android:inputType="text" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

                <TextView
                    android:text="Date:"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:id="@+id/text3_date"
                    android:layout_weight="1.65"
                    android:textSize="18sp"
                    android:textStyle="normal|bold"
                    android:layout_marginLeft="10dp" />

                <EditText
                    android:layout_width="173dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/date"
                    android:inputType="date"
                    android:hint="DD/MM/YY" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

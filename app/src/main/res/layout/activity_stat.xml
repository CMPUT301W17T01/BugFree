                        android:layout_weight="1"
                        android:textStyle="normal|bold"
                        android:textSize="18sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:text="Disgust: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textview3_others"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal|bold"
                        android:layout_marginLeft="10dp" />

                    <TextView
                        android:text=" "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/stat_disgust_others"
                        android:textSize="18sp"
                        android:textStyle="normal|bold"
                        android:layout_marginLeft="18dp" />

                    <TextView
                        android:text="Fear: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView4_others"
                        android:layout_weight="1"
                        android:textStyle="normal|bold"
                        android:textSize="18sp"
                        android:layout_marginLeft="35dp" />

                    <TextView
                        android:text=" "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/stat_fear_others"
                        android:layout_weight="1"
                        android:textStyle="normal|bold"
                        android:textSize="18sp"
                        android:layout_marginLeft="45dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:text="Happy: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textview5_others"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal|bold"
                        android:layout_marginLeft="10dp" />

                    <TextView
                        android:text=" "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/stat_happy_others"
                        android:textSize="18sp"
                        android:textStyle="normal|bold"
                        android:layout_marginLeft="27dp" />

                    <TextView
                        android:text="Sad: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView6_others"
                        android:layout_weight="1"
                        android:textStyle="normal|bold"
                        android:textSize="18sp"
                        android:layout_marginLeft="35dp" />

                    <TextView
                        android:text=" "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/stat_sad_others"
                        android:layout_weight="1"
                        android:textStyle="normal|bold"
                        android:textSize="18sp"
                        android:layout_marginLeft="50dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:text="Shame: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textview7_others"
                        android:textSize="18sp"
                        android:fontFamily="sans-serif"
                        android:textStyle="normal|bold"
                        android:layout_marginLeft="10dp" />

                    <TextView
                        android:text=" "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/stat_shame_others"
                        android:textSize="18sp"
                        android:textStyle="normal|bold"
                        android:layout_marginLeft="23dp" />

                    <TextView
                        android:text="Surprise: "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView8_others"
                        android:layout_weight="1"
                        android:textStyle="normal|bold"
                        android:textSize="18sp"
                        android:layout_marginLeft="35dp" />

                    <TextView
                        android:text=" "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/stat_surprise_others"
                        android:layout_weight="1"
                        android:textStyle="normal|bold"
                        android:textSize="18sp"
                        android:layout_marginLeft="10dp" />
                </LinearLayout>
                <com.github.mikephil.charting.charts.BarChart
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:id="@+id/bargraph2"></com.github.mikephil.charting.charts.BarChart>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>

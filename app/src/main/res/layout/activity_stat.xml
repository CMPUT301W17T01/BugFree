<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_stat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mac.bugfree.activity.StatActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/toolbar_block"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:text="Myself"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/stat_user"
                android:textSize="24sp"
                android:textStyle="normal|bold"
                android:textAlignment="center"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:text="Anger: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview1"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal|bold"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:text=" "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/stat_anger"
                    android:textSize="18sp"
                    android:textStyle="normal|bold"
                    android:layout_marginLeft="30dp" />

                <TextView
                    android:text="Confusion: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView2"
                    android:layout_weight="1"
                    android:textStyle="normal|bold"
                    android:textSize="18sp"
                    android:layout_marginLeft="35dp" />

                <TextView
                    android:text=" "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/stat_confusion"
                    android:layout_weight="1"
                    android:textStyle="normal|bold"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:text="Disgust: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview3"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal|bold"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:text=" "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/stat_disgust"
                    android:textSize="18sp"
                    android:textStyle="normal|bold"
                    android:layout_marginLeft="18dp" />

                <TextView
                    android:text="Fear: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:layout_weight="1"
                    android:textStyle="normal|bold"
                    android:textSize="18sp"
                    android:layout_marginLeft="35dp" />

                <TextView
                    android:text=" "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/stat_fear"
                    android:layout_weight="1"
                    android:textStyle="normal|bold"
                    android:textSize="18sp"
                    android:layout_marginLeft="45dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:text="Happy: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview5"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal|bold"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:text=" "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/stat_happy"
                    android:textSize="18sp"
                    android:textStyle="normal|bold"
                    android:layout_marginLeft="27dp" />

                <TextView
                    android:text="Sad: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:layout_weight="1"
                    android:textStyle="normal|bold"
                    android:textSize="18sp"
                    android:layout_marginLeft="35dp" />

                <TextView
                    android:text=" "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/stat_sad"
                    android:layout_weight="1"
                    android:textStyle="normal|bold"
                    android:textSize="18sp"
                    android:layout_marginLeft="50dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:text="Shame: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textview7"
                    android:textSize="18sp"
                    android:fontFamily="sans-serif"
                    android:textStyle="normal|bold"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:text=" "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/stat_shame"
                    android:textSize="18sp"
                    android:textStyle="normal|bold"
                    android:layout_marginLeft="23dp" />

                <TextView
                    android:text="Surprise: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:layout_weight="1"
                    android:textStyle="normal|bold"
                    android:textSize="18sp"
                    android:layout_marginLeft="35dp" />

                <TextView
                    android:text=" "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/stat_surprise"
                    android:layout_weight="1"
                    android:textStyle="normal|bold"
                    android:textSize="18sp"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>

            <com.github.mikephil.charting.charts.BarChart
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:id="@+id/bargraph1"></com.github.mikephil.charting.charts.BarChart>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:text="Total"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/stat_others"
                    android:textSize="24sp"
                    android:textStyle="normal|bold"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp">

                    <TextView
